{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "noEmit": true
    },
    "include": ["app/src/**/*.ts", "app/src/**/*.d.ts", "app/src/**/*.vue"],
    "references": [{ "path": "./tsconfig.node.json" }]
}